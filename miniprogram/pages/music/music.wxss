.music-page {
  min-height: 100vh;
  background: #ffffff;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 100rpx;
}

.play-button {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin: 60rpx 0;
  background: #007AFF;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.play-button.playing {
  background: #FF3B30;
}

.status-text {
  font-size: 28rpx;
  color: #666666;
  margin-top: 40rpx;
} 